<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_primario">

    <ImageView
        android:id="@+id/iv_Publiaciones"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/black" />

    <TextView
        android:id="@+id/tv_PublicacionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:fontFamily="casual"
        app:layout_constraintStart_toEndOf="@+id/iv_Publiaciones"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nombre" />

    <TextView
        android:id="@+id/tv_PublicacionEdad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:fontFamily="casual"
        app:layout_constraintStart_toEndOf="@+id/iv_Publiaciones"
        app:layout_constraintTop_toBottomOf="@+id/tv_PublicacionName"
        tools:text="Edad" />

    <TextView
        android:id="@+id/tv_PublicacionTipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:fontFamily="casual"
        app:layout_constraintStart_toEndOf="@+id/iv_Publiaciones"
        app:layout_constraintTop_toBottomOf="@+id/tv_PublicacionEdad"
        tools:text="Tipo de Animal" />

    <TextView
        android:id="@+id/tv_PublicacionLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="40dp"
        app:fontFamily="casual"
        app:layout_constraintStart_toEndOf="@+id/iv_Publiaciones"
        app:layout_constraintTop_toBottomOf="@+id/tv_PublicacionTipo"
        tools:text="480 likes" />


</androidx.constraintlayout.widget.ConstraintLayout>