<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.sistemasmoviles" >

    <!-- Se agregan los permisos necesarios para acceder a internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".UserApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SistemasMoviles"
        android:usesCleartextTraffic="true"
        tools:targetApi="31" >


        <activity
            android:name=".ActivityPublicacion"
            android:exported="false" />
        <activity
            android:name=".ActivityRegister"
            android:exported="false" />
        <activity
            android:name=".ActivityLogin"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityPublicaciones"
            android:exported="false" />
        <activity
            android:name=".ActivityBuscar"
            android:exported="false" />
        <activity
            android:name=".ActivityConfiguracion"
            android:exported="false" />
        <activity
            android:name=".ActivityChats"
            android:exported="false" />
        <activity
            android:name=".ActivityPmascota"
            android:exported="false" />
        <activity
            android:name=".ActivityPusuario"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>